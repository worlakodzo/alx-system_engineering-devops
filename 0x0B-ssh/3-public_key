#!/usr/bin/env bash
# add public key to server

USER="ubuntu"
SERVER="54.209.217.152"
PUB_KEY="ssh-rsa "

# Function to add the public key to authorized_keys
ssh "$USER@$SERVER" "mkdir -p ~/.ssh && chmod 700 ~/.ssh && echo $PUB_KEY >> ~/.ssh/authorized_keys && chmod 600 ~/.ssh/authorized_keys"
echo "Public key added to $USER@$SERVER"
